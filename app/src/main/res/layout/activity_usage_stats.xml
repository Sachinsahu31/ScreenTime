<!-- res/layout/activity_usage_stats.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Spinner for sorting/filtering options at the top -->
    <Spinner
        android:id="@+id/spinnerFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/background_light"
        android:padding="8dp" />

    <!-- TextView for displaying total time -->
    <TextView
        android:id="@+id/totalTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerFilter"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Total Time: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ListView for displaying usage stats items -->
    <ListView
        android:id="@+id/usageStatsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/totalTimeTextView" />

</RelativeLayout>
